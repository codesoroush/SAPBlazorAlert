</svg>

        </div>
                }

                else if (SAPAlertType == SAPAlertType.Custom)
                {
                    <img class="sapalert-custom-img" src="@CustomAlertTypeImage" />
                }
            }

            <div class="sapalert-title">
                <h4>
                    @Title
                </h4>
            </div>
        </div>

            <div class="sapalert-content">
                <div class="sapalert-body">

                    @ChildContent
                </div>
            </div>



            @if (!string.IsNullOrEmpty(FooterText))
            {
                <div class="sapalert-footer">
                    <small>
                        @FooterText
                    </small>
                </div>
            }


        </div>

    </div>
}


